<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Button" x:Key="ButtonMenu" >
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource light1}, Dark={StaticResource light5}}"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource light5}, Dark={StaticResource light1}}"/>
    </Style>

    <Style TargetType="Button" x:Key="ButtonStoryMenu">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource light1}}"/>
    </Style>

    <Style TargetType="Button" x:Key="ButtonMenuDisabled" >
        <Setter Property="BackgroundColor" Value="Gray"/>
    </Style>

    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource light2}, Dark={StaticResource light5}}"/>
    </Style>

</ResourceDictionary>
