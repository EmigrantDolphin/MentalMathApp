<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MentalMathApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MentalMathApp"
    xmlns:views="clr-namespace:MentalMathApp.Views"
    Shell.BackgroundColor="{AppThemeBinding Light={StaticResource light1}, Dark={StaticResource dark1}}"
    Shell.ForegroundColor="{AppThemeBinding Light={StaticResource light4}, Dark={StaticResource dark4}}"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent ContentTemplate="{DataTemplate views:MainMenu}"
                  Route="MainPage">
    </ShellContent>

</Shell>
